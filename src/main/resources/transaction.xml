        </tx:attributes> -->
        
        <!-- timeout时间太短影响本地调试-通通干掉 -->
        <tx:attributes>
        	<tx:method name="find*" propagation="SUPPORTS" read-only="true"></tx:method>
            <tx:method name="query*" propagation="SUPPORTS" read-only="true"></tx:method>
            <tx:method name="get*" propagation="SUPPORTS" read-only="true"></tx:method>
            <tx:method name="select*" propagation="SUPPORTS" read-only="true"></tx:method>
            <tx:method name="add*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="save*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="create*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="insert*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="update*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="modify*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="change*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="del*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
            <tx:method name="submit*" propagation="REQUIRED" rollback-for="Exception"></tx:method>
        </tx:attributes>
    </tx:advice>
     <aop:config>
        <!-- <aop:pointcut id="allManagerMethod" expression="execution (* com.marvels..service.*ServiceImpl.*(..))" /> -->
        <aop:pointcut id="allManagerMethod" expression="execution (* com.*..service.*.*(..))" />
        <aop:advisor advice-ref="txAdvice" pointcut-ref="allManagerMethod" order="0" />
    </aop:config>
</beans>